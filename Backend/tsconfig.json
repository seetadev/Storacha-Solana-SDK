{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "moduleResolution": "nodenext",
    "types": ["jest"],
    "lib": ["ES2021"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*", "src/tests/**/*", "**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
